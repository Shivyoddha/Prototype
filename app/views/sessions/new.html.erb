<style>
  .login-container {
    max-width: 900px;
    width: 100%;
    margin: 0 auto;
    padding: 40px;
    background: white;
    border-radius: 12px;
    box-shadow: 0 10px 40px rgba(0,0,0,0.2);
  }
  
  .form-group {
    margin-bottom: 20px;
  }
  
  .form-control {
    width: 100%;
    padding: 12px;
    border: 1px solid #d1d5db;
    border-radius: 6px;
    font-size: 14px;
    transition: all 0.2s;
  }
  
  .form-control:focus {
    outline: none;
    border-color: #2563eb;
    box-shadow: 0 0 0 3px rgba(37, 99, 235, 0.1);
  }
  
  .btn-primary {
    background: #2563eb;
    color: white;
    padding: 12px 40px;
    border: none;
    border-radius: 6px;
    font-weight: 600;
    cursor: pointer;
    font-size: 15px;
    transition: background 0.2s;
  }
  
  .btn-primary:hover {
    background: #1d4ed8;
  }
  
  .alert {
    padding: 12px 16px;
    border-radius: 6px;
    margin-bottom: 20px;
    border-left: 4px solid;
  }
  
  .alert-alert {
    background: #fee2e2;
    border-color: #dc2626;
    color: #991b1b;
  }
  
  table tbody tr:hover {
    background: #f9fafb;
  }
</style>

<div class="login-container">
  <h2 style="text-align: center; margin-bottom: 10px; color: #111827; font-size: 28px; font-weight: 700;">IRIS Procurement Portal</h2>
  <p style="text-align: center; margin-bottom: 30px; color: #6b7280; font-size: 14px;">National Institute of Technology Karnataka</p>
  
  <%= form_with url: login_path, local: true do |form| %>
    <div class="form-group">
      <%= form.label :user_name, "Username", style: "display: block; margin-bottom: 6px; font-weight: 500; color: #374151;" %>
      <%= form.text_field :user_name, class: "form-control", required: true %>
    </div>
    
    <div class="form-group">
      <%= form.label :password, "Password", style: "display: block; margin-bottom: 6px; font-weight: 500; color: #374151;" %>
      <%= form.password_field :password, class: "form-control", required: true %>
    </div>
    
    <% if alert %>
      <div class="alert alert-alert"><%= alert %></div>
    <% end %>
    
    <div style="text-align: center;">
      <%= form.submit "Login", class: "btn btn-primary" %>
    </div>
  <% end %>
  
  <div style="margin-top: 30px; padding: 20px; background: #f9fafb; border: 1px solid #e5e7eb; border-radius: 8px;">
    <h3 style="margin-bottom: 15px; color: #111827; font-size: 16px; text-align: center; font-weight: 600;">Prototype Login Credentials</h3>
    
    <table style="width: 100%; border-collapse: collapse; font-size: 13px;">
      <thead>
        <tr style="background: #f3f4f6; border-bottom: 2px solid #d1d5db;">
          <th style="padding: 10px; text-align: left; font-weight: 600; color: #374151;">Username</th>
          <th style="padding: 10px; text-align: left; font-weight: 600; color: #374151;">Display Name</th>
          <th style="padding: 10px; text-align: left; font-weight: 600; color: #374151;">Email</th>
          <th style="padding: 10px; text-align: left; font-weight: 600; color: #374151;">Password</th>
          <th style="padding: 10px; text-align: left; font-weight: 600; color: #374151;">Role</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr style="border-bottom: 1px solid #e5e7eb;">
            <td style="padding: 10px; font-weight: 600; color: #111827;"><%= user.user_name %></td>
            <td style="padding: 10px; color: #4b5563;"><%= user.display_name || '-' %></td>
            <td style="padding: 10px; color: #4b5563; font-family: monospace; font-size: 12px;"><%= user.email %></td>
            <td style="padding: 10px; color: #2563eb; font-weight: 600; font-family: monospace;">
              <% if user.user_name == 'admin' %>
                123456
              <% else %>
                <%= user.user_name %>123
              <% end %>
            </td>
            <td style="padding: 10px;">
              <% if user.admin? %>
                <span style="background: #dc2626; color: white; padding: 4px 8px; border-radius: 4px; font-size: 11px; font-weight: 600;">Admin</span>
              <% elsif user.buyer? %>
                <span style="background: #2563eb; color: white; padding: 4px 8px; border-radius: 4px; font-size: 11px; font-weight: 600;">Buyer</span>
              <% elsif user.approver? %>
                <span style="background: #059669; color: white; padding: 4px 8px; border-radius: 4px; font-size: 11px; font-weight: 600;">Approver</span>
              <% else %>
                <span style="background: #6b7280; color: white; padding: 4px 8px; border-radius: 4px; font-size: 11px; font-weight: 600;">User</span>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    
    <div style="margin-top: 15px; padding: 12px; background: #eff6ff; border-left: 4px solid #2563eb; border-radius: 4px; font-size: 12px; color: #1e40af;">
      <strong>Quick Login Tip:</strong> Click on any username above to copy it, then paste into the login form above.
    </div>
  </div>
</div>

